{
  "name": "node-pgm",
  "version": "0.0.0-development",
  "description": "Reader/Writer for PGM ",
  "keywords": ["pgm", "pnm"],
  "author": "sbgisen",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sbgisen/node-pgm.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "main": "./dist/index.cjs",
  "exports": {
    "import": "./src/index.js",
    "default": "./dist/index.cjs"
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "rm -rf dist && npm run build:cjs",
    "build:cjs": "esbuild --bundle src/index.js --outfile=dist/index.cjs --platform=node --external:./node_modules/*",
    "test": "mocha ./**/*.spec.js",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.0",
    "@commitlint/config-conventional": "^17.6.0",
    "chai": "^4.3.7",
    "esbuild": "^0.14.49",
    "eslint": "^8.36.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^15.6.1",
    "eslint-plugin-promise": "^6.1.1",
    "husky": "^8.0.3",
    "mocha": "^10.2.0",
    "semantic-release": "^21.0.1"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true,
      "mocha": true
    },
    "extends": [
      "standard"
    ]
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/github",
      "@semantic-release/npm"
    ],
    "branches": [
      "main"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
